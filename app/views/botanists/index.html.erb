<p id="notice"><%= notice %></p>

<h1>Botanists</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Patronymic</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @botanists.each do |botanist| %>
      <tr>
        <td><%= botanist.first_name %></td>
        <td><%= botanist.last_name %></td>
        <td><%= botanist.patronymic %></td>
        <td><%= botanist.position %></td>
        <td><%= link_to 'Show', botanist %></td>
        <td><%= link_to 'Edit', edit_botanist_path(botanist) %></td>
        <td><%= link_to 'Destroy', botanist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

